<%- include('header') -%>

<% 
function getRandomGradient() {
    let letters = '0123456789ABCDEF';
    let color = '#';
    for (let i = 0; i < 6; i++) {
        color += letters[Math.floor(Math.random() * 16)];
    }
    color += '40';
    return`background: linear-gradient(${color}, rgba(0, 0, 0, 0))`;
} 
%>

<body>
  <div class="wrapper">
    <%- include('sidebar', {active: 'cart'}) -%>
    <article>
      <section class="results">
        <div class="books">
          <% if(typeof konyvek !== 'undefined') { %> <% konyvek.forEach((konyv) => {%>
          <div class="book" style="<%= getRandomGradient() %>">
            <span class="gutter">
              <span class="thumbnail-wrapper">
                <img class="thumbnail" src="<%= konyv.thumbnail %>" alt="thumbnail" />
              </span>
              <div class="book-info">
                <h3 class="book-info_title"><%= konyv.title %></h3>
                <div class="book-info_authors"><%= konyv.authors %></div>
                <div class="book-info_category">
                  (&nbsp;<%= konyv.categories %>&nbsp;)
                </div>
              </div>
            </span>
            <span class="btns">
              <a class="btn buy quantity plusminus" href="/cart/del/<%= konyv._bookid %>"><i
                  class="fas fa-minus"></i></a>
              <a class="btn buy quantity plusminus" href="/cart/add/<%= konyv._bookid %>"><i
                  class="fas fa-plus"></i></a>
              <span class="btn buy quantity"><%= konyv._cartedQuantity %></span>
              <a href="#" class="btn buy"><i class="fas fa-coins"></i>&nbsp;&nbsp;Pay</a>
            </span>
          </div>
          <% })%> <% } %>
        </div>
      </section>
    </article>
  </div>
  <script></script>
</body>

<%- include('footer') -%>